<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Display area -->
    <LinearLayout
        style="@style/displayContainerStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false" />

        <TextView
            android:id="@+id/display"
            style="@style/displayStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Calculator buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:rowCount="6"
        android:columnCount="4">

        <!-- Row 0: Function buttons + operator -->
        <Button
            android:id="@+id/buttonAC"
            style="@style/buttonStyleFunction"
            android:layout_row="0"
            android:layout_column="0"
            android:contentDescription="@string/desc_all_clear"
            android:text="@string/button_ac" />

        <Button
            android:id="@+id/buttonPlusMinus"
            style="@style/buttonStyleFunction"
            android:layout_row="0"
            android:layout_column="1"
            android:contentDescription="@string/desc_toggle_sign"
            android:text="@string/button_plus_minus" />

        <Button
            android:id="@+id/buttonPercent"
            style="@style/buttonStyleFunction"
            android:layout_row="0"
            android:layout_column="2"
            android:contentDescription="@string/desc_percent"
            android:text="@string/button_percent" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/buttonStyleOperator"
            android:layout_row="0"
            android:layout_column="3"
            android:contentDescription="@string/desc_divide"
            android:text="@string/button_divide" />

        <!-- Row 1: 7 8 9 Ã— -->
        <Button
            android:id="@+id/button7"
            style="@style/buttonStyleNumber"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/button_7" />

        <Button
            android:id="@+id/button8"
            style="@style/buttonStyleNumber"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/button_8" />

        <Button
            android:id="@+id/button9"
            style="@style/buttonStyleNumber"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/button_9" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/buttonStyleOperator"
            android:layout_row="1"
            android:layout_column="3"
            android:contentDescription="@string/desc_multiply"
            android:text="@string/button_multiply" />

        <!-- Row 2: 4 5 6 - -->
        <Button
            android:id="@+id/button4"
            style="@style/buttonStyleNumber"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/button_4" />

        <Button
            android:id="@+id/button5"
            style="@style/buttonStyleNumber"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/button_5" />

        <Button
            android:id="@+id/button6"
            style="@style/buttonStyleNumber"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/button_6" />

        <Button
            android:id="@+id/buttonMinus"
            style="@style/buttonStyleOperator"
            android:layout_row="2"
            android:layout_column="3"
            android:contentDescription="@string/desc_subtract"
            android:text="@string/button_minus" />

        <!-- Row 3: 1 2 3 + -->
        <Button
            android:id="@+id/button1"
            style="@style/buttonStyleNumber"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/button_1" />

        <Button
            android:id="@+id/button2"
            style="@style/buttonStyleNumber"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/button_2" />

        <Button
            android:id="@+id/button3"
            style="@style/buttonStyleNumber"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/button_3" />

        <Button
            android:id="@+id/buttonPlus"
            style="@style/buttonStyleOperator"
            android:layout_row="3"
            android:layout_column="3"
            android:contentDescription="@string/desc_add"
            android:text="@string/button_plus" />

        <!-- Row 4: 0 (2-col span) . = -->
        <Button
            android:id="@+id/button0"
            style="@style/buttonStyleNumber"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="@string/button_0" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/buttonStyleNumber"
            android:layout_row="4"
            android:layout_column="2"
            android:contentDescription="@string/desc_decimal"
            android:text="@string/button_dot" />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/buttonStyleEquals"
            android:layout_row="4"
            android:layout_column="3"
            android:contentDescription="@string/desc_equals"
            android:text="@string/button_equals" />

        <!-- Row 5: DEL (4-col span) -->
        <Button
            android:id="@+id/buttonDelete"
            style="@style/buttonStyleFunction"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:contentDescription="@string/desc_delete"
            android:text="@string/button_delete" />

    </GridLayout>
</LinearLayout>
